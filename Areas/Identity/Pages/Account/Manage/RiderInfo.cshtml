@page
@model FoodDelivery.Areas.Identity.Pages.Account.Manage.RiderInfoModel
@{
    ViewData["Title"] = "Rider info";
    ViewData["ActivePage"] = ManageNavPages.RiderInfo;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="rider-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Credit"></label>
                <input asp-for="Input.Credit" class="form-control" disabled />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}