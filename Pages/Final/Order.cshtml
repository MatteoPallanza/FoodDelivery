@page
@model FoodDelivery.Pages.Final.OrderModel
@{
    ViewData["Title"] = "Order";
}

<h4>@ViewData["Title"]</h4>
<hr/>
<div class="row">
    <div clas="col-md-6">
        @if (Model.RestauratorDetails.Logo != null)
        {
            <img id="logo" style="width:120px;height:120px; object-fit:cover" src="data:image/*;base64,@(Convert.ToBase64String(Model.RestauratorDetails.Logo))">
        }
        else
        {
            <img id="logo" style="width:120px;height:120px; object-fit:cover" src="/assets/images/default-logo.png">
        }
    </div>
    <div class="col-md-6">
        <h5>@Model.RestauratorDetails.Name</h5>
        <p><strong>@Model.Category</strong></p>
        <p>
            @Model.RestauratorDetails.Address<br/>
            @Model.RestauratorDetails.PostalCode&nbsp;@Model.RestauratorDetails.City<br/>
        </p>
    </div>
</div>
<hr/>

<form method="post">
@foreach (var product in Model.Products)
{
    <p>
        <h6>@product.Name</h6>
        <strong>Price: </strong>@product.Price<br/>
        <strong>Discount: </strong>@product.Discount<br/>
        <strong>Quantity: </strong><input type="number" name="prod_@product.Id"/>
    </p>
    <hr/>
}
<input type="text" name="deliveryAddress"/>
<input type="submit" class="btn btn-primary"  value="Post" />
</form>